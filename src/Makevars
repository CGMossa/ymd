LIBDIR = ./rust/target/release
PKG_LIBS = -L$(LIBDIR) -lymd
STATLIB = $(LIBDIR)/libymd.a

all: C_clean

$(SHLIB): $(STATLIB)

$(STATLIB):
	 . "/Users/shrektan/.cargo/env" && cargo build --lib --release --manifest-path=./rust/Cargo.toml
	

C_clean:
	rm -Rf $(SHLIB) $(OBJECTS) $(STATLIB)

clean:
	rm -Rf $(SHLIB) $(OBJECTS) $(STATLIB) rust/target

.PHONY: all C_clean clean
